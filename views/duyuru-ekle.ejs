<%- include('includes/head.ejs') %>

<body>
  <%- include('includes/nav.ejs') %>

  <form action="/duyuru-ekle" method="post">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <section class="card border-0 py-1 p-md-2 p-xl-3 p-xxl-4 mb-4">
      <div class="card-body">
        <div class="d-flex align-items-center pb-4 mt-sm-n1 mb-0 mb-lg-1 mb-xl-3">
          <i class="ai-circle-plus text-warning lead pe-1 me-2"></i>
          <h2 class="h4 mb-0">Duyuru Ekle</h2>
        </div>

        <div class="col-sm-6">
          <label class="form-label" for="duyuru_adi">Duyuru Adı </label>
          <div class="password-toggle">
            <input class="form-control" type="text" name="duyuru_adi" autocomplete="off" id="duyuru_adi">
          </div>
        </div>
        <div class="col-sm-6">
          <label class="form-label" for="duyuru_icerigi">Duyuru İçeriği </label>
          <div class="password-toggle">
            <input class="form-control" type="text" name="duyuru_icerigi" autocomplete="off" id="duyuru_icerigi">
          </div>
        </div>
        <div class="col-sm-6">
          <label class="form-label" for="gost_tarihi">Duyuru Gösterim Tarihi </label>
          <div class="password-toggle">
            <input class="form-control" type="date" name="gost_tarihi" autocomplete="off" id="gost_tarihi">
          </div>
        </div>
        <div class="col-sm-6">
          <label class="form-label" for="bitis_tarihi">Duyuru Bitiş Tarihi </label>
          <div class="password-toggle">
            <input class="form-control" type="date" name="bitis_tarihi" autocomplete="off" id="bitis_tarihi">
          </div>
        </div>

        <div class="d-flex justify-content-end pt-3">
          <button class="btn btn-secondary" type="button">Vazgeç</button>
          <button class="btn btn-primary ms-3" type="submit" value="1">Kaydet</button>
        </div>
      </div>
    </section>
  </form>

  <%- include('includes/foot.ejs') %>
</body>
